{
  "name": "zentra",
  "version": "1.0.0",
  "description": "Zentra - Production-ready multi-tenant commerce platform",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "dev:logs": "ENABLE_FILE_LOGS=true nodemon src/index.js",
    "test": "npm run test:integration",
    "test:all": "npm run test:integration && npm run test:e2e",
    "test:watch": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:integration": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest tests/integration",
    "test:integration:verbose": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest tests/integration --verbose",
    "test:e2e": "npx playwright test",
    "test:e2e:headed": "npx playwright test --headed",
    "test:e2e:debug": "npx playwright test --debug",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:report": "npx playwright show-report",
    "lint": "prettier --check \"src/**/*.js\"",
    "format": "prettier --write \"src/**/*.js\"",
    "job:metrics": "node -e \"import('./src/jobs/sellerMetrics.job.js').then(m => m.runJob())\"",
    "job:audit-cleanup": "node -e \"import('./src/jobs/auditCleanup.job.js').then(m => m.runJob())\""
  },
  "keywords": [
    "ecommerce",
    "marketplace",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@faker-js/faker": "^10.3.0",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.0.3",
    "cross-env": "^10.1.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^11.0.1",
    "nodemon": "^3.1.11",
    "playwright": "^1.58.2",
    "prettier": "^3.7.4",
    "supertest": "^7.2.2"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cloudinary": "^2.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.1.5",
    "mongoose-aggregate-paginate-v2": "^1.1.4",
    "multer": "^2.0.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
  }
}
