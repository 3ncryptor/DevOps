{
  "name": "zentra",
  "version": "1.0.0",
  "description": "Zentra - Production-ready multi-tenant commerce platform",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "dev:logs": "ENABLE_FILE_LOGS=true nodemon src/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "prettier --check \"src/**/*.js\"",
    "format": "prettier --write \"src/**/*.js\"",
    "job:metrics": "node -e \"import('./src/jobs/sellerMetrics.job.js').then(m => m.runJob())\"",
    "job:audit-cleanup": "node -e \"import('./src/jobs/auditCleanup.job.js').then(m => m.runJob())\""
  },
  "keywords": [
    "ecommerce",
    "marketplace",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@types/node": "^25.0.3",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cloudinary": "^2.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.1.5",
    "mongoose-aggregate-paginate-v2": "^1.1.4",
    "multer": "^2.0.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
  }
}
